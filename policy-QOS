SELECT policyID, statisticsID,  CBQoSPolicyMetric.DisplayName, CBQoSPolicyMetric.PolicyFullPathName FROM Orion.Netflow.CBQoSPolicyMetric AS CBQoSPolicyMetric

where PolicyFullPathName like '%group-inbound-7' AND statisticsID='2'

